
<% unless users.empty? %>
  <% users.each do |user| %>
  <div class="search_result">
    <%= link_to highlight(user.name, params[:name_search]), user_path(user.slug)  %>
    <span class="search_description">
    - <%= user.bio %>
    </span>
  </div>
  <% end %>
<% else %>
<br>
  No people found, sorry, maybe you want to add <%= link_to "yourself", new_user_path %>!
<% end %>

