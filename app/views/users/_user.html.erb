<div id="<%= dom_id user %>" class="profile">

<table class="contact_info">
<thead>
  <tr>
    <td>
      <% if user.show_email == 1 %>
    <a href="mailto:<%= user.email%>">
      <img src="/email.png" class="icon">
    </a>
      <% end %>
    <td>
    <% if user.show_teams == 1 %>
    <a href="<%= user.teams_link %>">
     <img src="/teams.png" class="icon">
    </a>
    <% end %>
    </td></td>
  </tr>
</thead>
</table>

  <p>
    <h1><% if user.role == 1 %>Teacher | <% else %> Student | <% end %> <%= user.name %></h1>
  </p>
  <p>
    <%= user.bio %>
  </p>
</div>
